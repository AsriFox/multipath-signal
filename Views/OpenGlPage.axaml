<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MultipathSignal.Views"
        x:Class="MultipathSignal.Views.OpenGlPage"
        Title="Doppler shift - ambiguity function"
        Width="783" Height="800" MinWidth="440" MinHeight="420">
  <Grid>
    <local:OpenGlPageControl x:Name="GL"/>
    <StackPanel>
      <TextBlock Text="{Binding #GL.Info}"/>
      <TextBlock x:Name="FlavorTextBlock" FontSize="20" />
    </StackPanel>
    <Grid ColumnDefinitions="*,Auto" Margin="20">
      <StackPanel Grid.Column="1" MinWidth="300">
        <TextBlock Text="Yaw" />
        <Slider Value="{Binding Yaw, Mode=TwoWay, ElementName=GL}" Maximum="10"/>
        <TextBlock Text="Pitch" />
        <Slider Value="{Binding Pitch, Mode=TwoWay, ElementName=GL}" Maximum="10"/>
        <TextBlock Text="Roll" />
        <Slider Value="{Binding Roll, Mode=TwoWay, ElementName=GL}" Maximum="10"/>
        <TextBlock Text="Distance" />
        <Slider Value="{Binding Distance, Mode=TwoWay, ElementName=GL}" Minimum="1" Maximum="10"/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>